#include <stdio.h>
#include <stdlib.h>
// Function to insert an element at a given position
void insert(int arr[], int n, int pos, int element) {
 // Shift all elements after the position one step ahead
 for (int i = n - 1; i >= pos; i--) {
 arr[i + 1] = arr[i];
 }
 // Insert the element at the given position
 arr[pos] = element;
}
// Function to delete an element at a given position
void delete(int arr[], int n, int pos) {
 // Shift all elements after the position one step behind
 for (int i = pos; i < n - 1; i++) {
 arr[i] = arr[i + 1];
 }
}
// Function to display the array
void display(int arr[], int n) {
 for (int i = 0; i < n; i++) {
 printf("%d ", arr[i]);
 }
 printf("\n");
}
int main() {
 int n;
 printf("Enter the size of the array: ");
 scanf("%d", &n);
 int arr[n];
 printf("Enter the elements of the array: ");
 for (int i = 0; i < n; i++) {
 scanf("%d", &arr[i]);
 }
 int pos, element;
 // Insert an element
 printf("Enter the position where you want to insert the element: ");
 scanf("%d", &pos);
 printf("Enter the element: ");
 scanf("%d", &element);
 insert(arr, n, pos, element);
 printf("Array after inserting the element: ");
 display(arr, n + 1);
 // Delete an element
 printf("Enter the position of the element you want to delete: ");
 scanf("%d", &pos);
 delete(arr, n + 1, pos);
 printf("Array after deleting the element: ");
 display(arr, n);
 return 0;
}
